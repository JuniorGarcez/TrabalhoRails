<h1>Login</h1>
<%= form_tag(logins_path, method: :post) do %>
  <p>
    <%= label_tag :name %><br>
    <%= text_field_tag :name %>
  </p>

  <p>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </p>

  <p>
    <%= submit_tag "Log in", class: "btn btn-primary" %>
  </p>

<% end %>
