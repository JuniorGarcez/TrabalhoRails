<% if resource.errors.any? %>
<div style=color:black; id="error_expl" class="panel panel-danger">
  <div style=color:black; class="panel-heading">
    <h3 style=color:black;  class="panel-title"><%= t(pluralize(resource.errors.count, "erro")) %> impediu que este artigo fosse salvo: </h3>
  </div>
  <div style=color:black;  class="panel-body">
    <ul>
      <% resource.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>
